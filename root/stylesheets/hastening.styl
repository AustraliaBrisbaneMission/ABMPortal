@media print
  @page
    size landscape
  
  body *
    visibility hidden
    height 0
  
  #wrapper *
    height auto
  
  #report
    position absolute
    left 0
    top 0
    right 0
  
  #report *
    visibility visible
    -webkit-print-color-adjust exact

#wrapper
 overflow auto
 width 800px

#report
  border 1px #000 solid
  background-color #fff
  padding 4px
  font-family Calibri, Candara, Segoe, "Segoe UI", Optima, Arial, sans-serif
  
  input
    background-color transparent
    border none
    font-family Calibri, Candara, Segoe, "Segoe UI", Optima, Arial, sans-serif
  
  .header
    padding 4px 16px
    color rgb(32, 55, 100)
    font-size 14px
    
    input
      margin 0 8px
      color rgb(32, 55, 100)
    
    img
      display block
      width 400px
      margin 8px auto
    
    .goal
      position absolute
      left 260px
      bottom 10px
    
    #goal
      position absolute
      bottom 0
      left 290px
      border 1px rgb(47, 117, 181) solid
      width 50px
      height 35px
      font-size 28px
      text-align center
    
    .big
      font-family Calibri, Candara, Segoe, "Segoe UI", Optima, Arial, sans-serif
      font-size 24px
    
    .heading
      display inline
      margin 0
      padding 0
      border none
      float right
    
    .right
      float right
    
    .underline
      border-bottom 1px rgb(47, 117, 181) solid
      position relative
    
    .stake
      margin-left 0
      text-align right
      width 200px
    
    #president
      width 200px
    
    .long
      width 400px
  
  .band
    background-color rgb(221, 235, 247) !important
  
  table
    font-size 10px
    border-collapse collapse
    th, td
      border 1px rgb(47, 117, 181) solid
      vertical-align center
      text-align center
    th
      border-bottom 2px rgb(47, 117, 181) solid
    td
      font-size 12px
      input[type="text"]
        height 100%
        width 100%
      input
        text-align center
  
  #units
    th, td
      width 5%
    td
      height 24px
    .comments
      width 25%
  
  #baptisms
    margin-top 16px
    th, td
      width 3%
    .baptismsLabel
      background-image url('images/baptisms.png')
      background-size contain
      background-repeat no-repeat
      background-position center
    .wardNames
      width 10%
    .totals
      border-top 2px rgb(47, 117, 181) solid
    .biggish
      font-size 12px
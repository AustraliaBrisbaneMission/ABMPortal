/*
 * Import nib
 */
@import 'nib'

/*
 * Nib provides a CSS reset
 */
global-reset()

body
  font-family "Trebuchet MS", "Helvetica", "Arial",  "Verdana", "sans-serif"

//@import url('https://fonts.googleapis.com/css?family=Concert+One');
@font-face {
  font-family: 'Concert One';
  font-style: normal;
  font-weight: 400;
  src: local('Concert One'), local('ConcertOne-Regular'), url(https://themes.googleusercontent.com/static/fonts/concertone/v4/eNLG875uBc3mU2X9z56PW4bN6UDyHWBl620a-IRfuBk.woff) format('woff');
}

html, body
  width 100%
  height 100%
  margin 0
  padding 0
  overflow hidden

#links
  background-color #333
  position absolute
  top 0
  left 0
  right 0
  height 16px
  
  a
    text-decoration none
    color #FFF
    
    h1
      font-weight bold
      float left
  
  #settings
    float right

#settingsMenu
  position fixed
  right 0px
  top 16px
  background-color #fff
  border 1px solid #999
  padding 4px
  box-shadow 0 0 4px #999
  border-radius 2px
  z-index 1
  width 250px
  
  .helpMessage
    font-size 10px
    color #666

#map
  position absolute
  top 16px
  left 0
  right 0
  bottom 0

#areas
  height 280px

.titleLink
  color #000
  text-decoration none
.titleLink:hover
  color #66F

.editPoint
  background-color #fff
  border 1px solid #0f0
  border-radius 6px
  width 9px
  height 9px

.cluster
  background-color #FC3
  border 2px solid #666
  border-radius 10px
  width 16px
  height 16px
  text-align center
  vertical-align middle

#form
  background-color rgba(255, 255, 255, 0.95)
  margin 8px
  padding 4px
  box-shadow 0 0 4px #999
  border-radius 2px
  width 250px
  
  h1
    font-family 'Concert One', cursive
    font-size 16px
    padding-bottom 4px
    text-align center
  
  #form_search input
    width 246px
  
  #form_open
    border 1px solid #CCC
    height 200px
    padding 4px
    overflow auto
    
    .splitContainer
      div
        margin 8px 0
      p
        margin 4px 0
      h2
        font-size 16px
        font-weight bold
    
    .item
      font-size 1.1em
      td
        padding 4px
    
    .directionsAddress
      width 98%
    #directionsSubmit
      float right
  
  #form_list
    height 200px
    overflow auto
    
    .list_container
      border 1px solid #CCC
    
    .heading:hover
      background-color rgba(100, 100, 100, 0.1)
    .heading
      background-color rgba(0, 0, 0, 0.1)
      height 18px
      cursor pointer
      .open
        background-color rgba(200, 200, 200, 0.1)
      h3
        font-size 14px
        padding 2px
        float left
      input
        float right
        margin-top 2px
        margin-right 2px
    
    .list
      background-color rgba(0, 0, 0, 0.05)
      padding 2px 4px 4px 8px
      li
        padding 2px
        a
          color #66F
          text-decoration none

.prediction
  position absolute
  border 1px solid #CCC
  padding 4px
  background-color #FFF
  max-height 300px
  overflow-x hidden
  overflow-y auto
  font-size 14px
  
  a
    text-decoration none
  
  div:hover
    background-color #CCC
    color #FFF
  div
    padding 2px
    color #CCC
  
  .prediction_name
    color #000
    font-size 14px
  
  .prediction_type
    margin-left 4px
    font-size 10px

.info
  h3
    font-weight bold

.label
  color #000
  font-size 500%
  text-shadow -1px -1px 0 #fff, 1px -1px 0 #fff, -1px 1px 0 #fff, 1px 1px 0 #fff
  text-align center
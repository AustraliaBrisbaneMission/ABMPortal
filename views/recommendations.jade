extend layout

block head
  title Recommendations - #{siteName}
  script(src="/scripts/recommendations.js" type="text/javascript")
  script(type="text/javascript" src="https://code.jquery.com/jquery-1.9.1.js")
  script(type="text/javascript" src="https://code.jquery.com/ui/1.10.3/jquery-ui.js")
  script(src="/scripts/json2.js" type="text/javascript")

block content
  div#header
    h1 Transfer Recommendations
    p.
      To be discussed by <strong>both</strong> zone leaders then filled out separately.
      It should be submitted by the end of week 4.
  form#recommendations
    div
      span #{elder ? "" : "Sister"} Zone:
      input(type="text" name="zone" value=(position == "SISTER_TRAINING_LEADER" ? unit : zone) || username)
      span #{elder ? "Zone" : "Sister Training"} Leader:
      input(type="text" name="zone_leader" value=(sso ? displayName : ""))
    div
      div#areas
      input(type="button" value="Add Area" onclick="addArea()")
    div
      input#submit_button(type="button" value="Submit Recommendations" onclick="submitRecommendation()")
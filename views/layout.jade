extend essentials

block header
  link(rel="icon" type="image/png" href="/stylesheets/images/icon.png")
  link(rel='stylesheet' href='/stylesheets/style.css')
  block head

block body
  header
  div#user
    if username
      span Welcome #{displayName}!
      br
      a(href="/logout") Logout
    else
      a(href="/login") Login
  .container
    .sidebar
      .widget
        h1 Links
        ul
          if auth >= 2
            li
              a(href="/cards") Order Cards
          if auth >= 4
            li
              a(href="/recommendations") Submit Transfer Recommendations
          if auth >= 5
            li
              a(href="/admin/recommendations") View Transfer Recommendations
          if auth >= 5
            li
              a(href="/callsheet") Callsheet
          if auth >= 5
            li
              a(href="/imos") IMOS
          if auth >= 5
            li
              a(href="/historical_data" target="_blank") Historical Data
          if auth >= 5
            li
              a(href="/area_analysis") Area Analysis
          if auth >= 5
            li
              a(href="/admin/users") Admin
    .main-content
      block content
  footer
    p Australia Brisbane Mission